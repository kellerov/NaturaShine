{
  "extends": ["prettier"],
  "rules": {
    "usePrettierrc": false,
    "arrow-body-style": "off",
    "prefer-arrow-callback": "off",
    "singleQuote": true,
    "parser": "flow",
    "semi": true,
    "trailingComma": "all",
    "printWidth": 80,
    "tabWidth": 2,
    "arrowParens": "avoid",
    "fileInfoOptions": {
      "withNodeModules": true
    }
  }
}
